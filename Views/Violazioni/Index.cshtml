@model IEnumerable<AppMulte.Models.Violazione>

<div class="d-flex">
    <h2>Elenco Violazioni</h2>
    <button type="button" class="btn btn-info ms-5 p-0 pe-2 ps-2">
        <a href="@Url.Action("Create")" class="btn btn-link custom-link p-0">Inserisci una violazione</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Descrizione</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td>@violazione.Descrizione</td>
                <td>
                    <button type="button" class="btn btn-warning">
                        <a href="@Url.Action("Edit", new { id = violazione.IDViolazione })" class="btn btn-link custom-link p-0">Modifica</a>
                    </button>
                    <button type="button" class="btn btn-success">
                        <a href="@Url.Action("Details", new { id = violazione.IDViolazione })" class="btn btn-link custom-link p-0">Dettagli</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>



<style>

    .custom-link {
        text-decoration: none;
        color: black;
    }

</style>