@model List<AppMulte.Models.ViolazioniImportoSuperioreA400>

<h2>Violazioni con Importo Superiore a 400</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Violazione</th>
            <th>Importo</th>
            <th>Data Violazione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td>@violazione.Verbale.IDVerbale</td>
                <td>@violazione.Verbale.Importo</td>
                <td>@violazione.Verbale.DataViolazione</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <button type="button" class="btn btn-success">
        <a href="@Url.Action("Index")" class="btn btn-link custom-link p-0">Torna alla Lista</a>
    </button>
</div>

<style>

    .custom-link {
        text-decoration: none;
        color: black;
    }

</style>