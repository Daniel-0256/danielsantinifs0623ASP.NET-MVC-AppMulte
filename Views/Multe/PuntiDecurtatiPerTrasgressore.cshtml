@model List<AppMulte.Models.PuntiDecurtatiPerTrasgressore>

<h2>Punti Decurtati per Trasgressore</h2>

<table class="table">
    <thead>
        <tr>
            <th>Trasgressore</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Trasgressore.Cognome, @item.Trasgressore.Nome</td>
                <td>@item.TotalePuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <button type="button" class="btn btn-success">
        <a href="@Url.Action("Index")" class="btn btn-link custom-link p-0">Torna alla Lista</a>
    </button>
</div>

<style>

    .custom-link {
        text-decoration: none;
        color: black;
    }

</style>