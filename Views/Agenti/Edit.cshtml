@model AppMulte.Models.Agente

<h2>Modifica Agente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IDAgente)

    <div class="form-group">
        @Html.LabelFor(model => model.NomeAgente)
        @Html.EditorFor(model => model.NomeAgente, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CognomeAgente)
        @Html.EditorFor(model => model.CognomeAgente, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salva</button>
}
